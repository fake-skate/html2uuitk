:root {
    margin: 0;
    padding: 0;
}
.left-container {
    width: 30%;
    min-width: 320px;
    height: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 24px;
}
.item {
    min-width: 100%;
    height: 42px;
    background-color: #f0f0f0;
    align-items: center;
    justify-content: center;
    margin-bottom: 12px;
}
.text {
    color: #333;
    font-size: 18px;
}
